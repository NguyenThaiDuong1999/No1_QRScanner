<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:src="@drawable/img_intro_1"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_intro_full"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/img_intro_2"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_28sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:fontFamily="@font/be_vn_pro_semibold"
        android:gravity="center_horizontal"
        android:text="Hello World"
        android:textColor="#1E2B1F"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:fontFamily="@font/be_vn_pro_regular"
        android:gravity="center_horizontal"
        android:text="Hello world"
        android:textColor="#636366"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>